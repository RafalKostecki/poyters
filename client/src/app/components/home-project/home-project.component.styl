@import '../../assets/styles/index.styl'

.homeProject {
  display: flex
  flex-direction: row
  justify-content: space-between
  margin-bottom: 30px
  padding: 30px 40px

  background-color: shadow4

  @media (max-width: 1000px) {
    flex-direction: column
    flex-wrap: no wrap
    padding: 30px 20px
  }

  &__desc, &__img {
    flex: 1
    max-width: calc(55% - 70px)

    @media (max-width: 1000px) {
      max-width: none
    }
  }

  &__desc {
    display: flex
    flex-direction: column
    justify-content: center

    & h2 {
      text-align: center
      margin-bottom: 20px  

      @media (max-width: 1000px) {
        margin-bottom: 15px
      }
    }
  }

  &__img {
    @media (max-width: 1000px) {
      margin-bottom: 25px
    }

    & > img {
      width: 100%
      max-width: 100%  
    }
  }
}
